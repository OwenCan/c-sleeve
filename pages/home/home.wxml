<!--swiper组件含义
    indicator-dots 出现轮播的小点显示
            indicator-active-color="#000000" 轮播小点的颜色
            autoplay 实现自动播放
            circular 实现轮播
            想学习其他功能，可查看swiper组件功能
            -->
<view>
    <!--    <image class="top-theme" src="{{themeA.entrance_img}}"></image> 接口无地址 -->
    <!--主题-->
    <image class="top-theme" src="/images/theme1.jpg"></image>

    <!--Banner-->
    <swiper class="swiper"
            indicator-dots
            indicator-active-color="#000000"
            autoplay
            circular>
        <!--方式2-利用静态轮播的形式-->
        <swiper-item>
            <image src="/images/banner2.jpg" class="swiper"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/banner1.jpg" class="swiper"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/banner3.jpg" class="swiper"></image>
        </swiper-item>

        <!--方式1-调用接口时，用以下方法，BLock是实现循环轮播的效果，wx:for放入的是从接口传进来的数据-->
        <!--<block wx:for="{{bannerB.items}}">
